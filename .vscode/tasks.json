{
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "options": {
        "cwd": "${workspaceRoot}/src"
    },
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "-f",
                "netcoreapp1.0",
                "-b",
                "../build",
                "-o",
                "../build/output"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        }
    ]
}