{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Build/Output/src.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "https://localhost:5001",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}